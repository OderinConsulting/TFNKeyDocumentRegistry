{
  "version": 2,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "src/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/src/index.html" },
    { "src": "/static/images/(.*)", "dest": "/public/static/images/$1" },
    { "src": "/styles/(.*)", "dest": "/src/styles/$1" },
    { "src": "/scripts/(.*)", "dest": "/src/scripts/$1" }
  ]
}
